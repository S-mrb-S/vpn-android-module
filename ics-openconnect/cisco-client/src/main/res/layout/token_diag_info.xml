<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<!-- row 1: tokencode, progress bar -->
    <TextView
        android:id="@+id/tokencode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="48sp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:max="59"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

	<!-- row 2: copy, change pin buttons -->
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >

        <Button
	        android:id="@+id/change_pin_button"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        style="?android:attr/buttonBarButtonStyle"
	        android:text="@string/new_pin" />

	    <View
	    	android:layout_width="1dp"
	    	android:layout_height="fill_parent"
	    	android:background="@android:color/darker_gray"/>

	    <Button
	        android:id="@+id/copy_button"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        style="?android:attr/buttonBarButtonStyle"
	        android:text="@string/copy" />

	</LinearLayout>

    <View
    	android:layout_width="fill_parent"
    	android:layout_height="1dp"
    	android:paddingTop="10dp"
    	android:paddingBottom="10dp"
    	android:background="@android:color/darker_gray"/>

	<!-- row 3: next tokencode, using_pin -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/next_tokencode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left" />

        <Space
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/using_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right" />

	</LinearLayout>

	<View
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:background="@android:color/darker_gray"/>

	<!-- row 4: token S/N, exp date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/token_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left" />

        <Space
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/exp_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right" />

	</LinearLayout>

	<View
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:background="@android:color/darker_gray"/>

	<!-- row 5: GMT, device ID -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/gmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left" />

        <Space
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/dev_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right" />

	</LinearLayout>

	<View
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:background="@android:color/darker_gray"/>

</LinearLayout>
